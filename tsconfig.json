{
	"compilerOptions": {
    "composite": true,
    "module": "CommonJS",
		"target": "ES2017",
		"noImplicitAny": true,
		"preserveConstEnums": true,
		"outDir": "./dist",
    "sourceMap": true,
		"esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
		"moduleResolution": "node",
		"rootDir": "./src",
		"lib": ["es2019"]
	},
	"include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*test.ts"]
}
