root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
max_line_length = 120
trim_trailing_whitespace = true

[package.json]
indent_size = 2

[*.md]
insert_final_newline = false

[COMMIT_EDITMSG]
max_line_length = 0

[Makefile]
indent_size = 4
indent_style = tab
